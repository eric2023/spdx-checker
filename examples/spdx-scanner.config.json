{
  "project_name": "Example Project",
  "project_version": "1.0.0",
  "copyright_holder": "Example Corporation",
  "default_license": "MIT",
  "validation_rules": {
    "require_license_identifier": true,
    "require_copyright": true,
    "require_project_attribution": false,
    "allow_unknown_licenses": false,
    "require_osi_approved": false,
    "require_spdx_version": false,
    "min_copyright_year": 1970,
    "max_copyright_year": 2030,
    "copyright_format": "standard",
    "license_format": "strict"
  },
  "correction_settings": {
    "create_backups": true,
    "backup_suffix": ".spdx-backup",
    "preserve_existing": true,
    "default_license": "MIT",
    "default_copyright_holder": "Example Corporation",
    "default_project_name": "Example Project",
    "dry_run": false
  },
  "scanner_settings": {
    "follow_symlinks": false,
    "max_file_size": 10485760,
    "source_file_extensions": [
      ".h",
      ".cpp",
      ".c",
      ".go"
    ],
    "exclude_patterns": [
      "**/node_modules/**",
      "**/build/**",
      "**/dist/**",
      "**/.git/**",
      "**/__pycache__/**",
      "**/*.egg-info/**",
      "**/venv/**",
      "**/env/**",
      "**/.venv/**",
      "**/.env/**",
      "**/target/**",
      "**/out/**",
      "**/bin/**",
      "**/obj/**",
      "**/.pytest_cache/**",
      "**/.mypy_cache/**",
      "**/coverage/**",
      "**/htmlcov/**",
      "**/.tox/**",
      "**/.nox/**"
    ]
  },
  "output_settings": {
    "format": "text",
    "output_file": null,
    "verbose": false,
    "quiet": false,
    "show_progress": true,
    "include_summary": true,
    "include_details": true
  },
  "git_settings": {
    "enabled": true,
    "respect_gitignore": true,
    "use_git_timestamps": true,
    "check_uncommitted": false,
    "check_untracked": false
  },
  "template_settings": {
    "templates": {
      "python": "# SPDX-License-Identifier: {license}\n# Copyright (c) {year} {copyright_holder}\n# {project_name}\n\n",
      "javascript": "// SPDX-License-Identifier: {license}\n// Copyright (c) {year} {copyright_holder}\n// {project_name}\n\n",
      "typescript": "// SPDX-License-Identifier: {license}\n// Copyright (c) {year} {copyright_holder}\n// {project_name}\n\n",
      "java": "// SPDX-License-Identifier: {license}\n// Copyright (c) {year} {copyright_holder}\n// {project_name}\n\n",
      "c": "/* SPDX-License-Identifier: {license}\n * Copyright (c) {year} {copyright_holder}\n * {project_name}\n */\n\n",
      "cpp": "/* SPDX-License-Identifier: {license}\n * Copyright (c) {year} {copyright_holder}\n * {project_name}\n */\n\n",
      "go": "// SPDX-License-Identifier: {license}\n// Copyright (c) {year} {copyright_holder}\n// {project_name}\n\n",
      "rust": "// SPDX-License-Identifier: {license}\n// Copyright (c) {year} {copyright_holder}\n// {project_name}\n\n",
      "shell": "# SPDX-License-Identifier: {license}\n# Copyright (c) {year} {copyright_holder}\n# {project_name}\n\n",
      "ruby": "# SPDX-License-Identifier: {license}\n# Copyright (c) {year} {copyright_holder}\n# {project_name}\n\n",
      "php": "// SPDX-License-Identifier: {license}\n// Copyright (c) {year} {copyright_holder}\n// {project_name}\n\n",
      "swift": "// SPDX-License-Identifier: {license}\n// Copyright (c) {year} {copyright_holder}\n// {project_name}\n\n",
      "kotlin": "// SPDX-License-Identifier: {license}\n// Copyright (c) {year} {copyright_holder}\n// {project_name}\n\n",
      "scala": "// SPDX-License-Identifier: {license}\n// Copyright (c) {year} {copyright_holder}\n// {project_name}\n\n",
      "html": "<!-- SPDX-License-Identifier: {license} -->\n<!-- Copyright (c) {year} {copyright_holder} -->\n<!-- {project_name} -->\n\n",
      "css": "/* SPDX-License-Identifier: {license}\n * Copyright (c) {year} {copyright_holder}\n * {project_name}\n */\n\n",
      "sql": "-- SPDX-License-Identifier: {license}\n-- Copyright (c) {year} {copyright_holder}\n-- {project_name}\n\n",
      "json": "// SPDX-License-Identifier: {license}\n// Copyright (c) {year} {copyright_holder}\n// {project_name}\n\n",
      "yaml": "# SPDX-License-Identifier: {license}\n# Copyright (c) {year} {copyright_holder}\n# {project_name}\n\n",
      "xml": "<!-- SPDX-License-Identifier: {license} -->\n<!-- Copyright (c) {year} {copyright_holder} -->\n<!-- {project_name} -->\n\n"
    },
    "use_custom_templates": false,
    "template_directory": null
  }
}